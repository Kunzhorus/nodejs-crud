<div class="container" style="margin-bottom: 80px">
  <div class="mt-4 ml-2">
    <div class="row">
      {{#each courses}}
        <div class="col-sm-6 col-lg-4">
          <div class="card" style="margin: 10px 0px">
            <a href="/courses/{{this.slug}}">
              <img class="card-img-top" src="https://img.youtube.com/vi/{{this.videoId}}/sddefault.jpg">
            </a>

            <div class="card-body">
              <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
              </a>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Mua khoa hoc</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>